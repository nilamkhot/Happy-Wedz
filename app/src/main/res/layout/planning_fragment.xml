<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_child_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:alpha="0.9"
                        android:src="@drawable/shop_img"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/camera_bubble"
                        android:layout_margin="10dp"
                        android:layout_alignParentLeft="true"
                        />

                    <ImageView
                        android:id="@+id/inbox_btn"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/chat_bubble"
                        android:layout_margin="10dp"
                        android:layout_alignParentRight="true"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:textSize="18dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Jack &amp; Jill"
                            android:drawableRight="@drawable/pencil"
                            android:drawablePadding="@dimen/spacing_medium"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Pune"
                            android:layout_marginTop="-5dp"
                            android:textSize="14dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="50dp">

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:alpha="0.5"
                                android:background="@color/white"
                                android:layout_marginRight="@dimen/spacing_medium">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:alpha="0.5"
                                android:background="@color/white"
                                android:layout_marginRight="@dimen/spacing_medium">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:alpha="0.5"
                                android:background="@color/white"
                                android:layout_marginRight="@dimen/spacing_medium">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    />
                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Days to D-day"
                            android:layout_marginTop="10dp"
                            android:textSize="14dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/btn_rounded_grey_border_transparent">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_baseline_add_24"
                                app:tint="@color/white"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/spacing_medium"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:text="Invite"
                                android:layout_gravity="center"
                                android:textSize="14dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/spacing_medium">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/my_checklist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="@dimen/spacing_middle"
                        android:elevation="@dimen/spacing_medium">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_middle">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/checklist"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/spacing_middle">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/black"
                                    android:text="My Checklist"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16dp"
                                        android:layout_gravity="center|start"
                                        android:gravity="center"
                                        android:fontFamily="@font/poppins_regular"
                                        android:layout_marginTop="@dimen/spacing_medium"
                                        android:textColor="@color/pink"
                                        android:text="0/"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16dp"
                                        android:layout_gravity="center|start"
                                        android:gravity="center"
                                        android:fontFamily="@font/poppins_regular"
                                        android:layout_marginTop="@dimen/spacing_medium"
                                        android:textColor="@color/black"
                                        android:text="65"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/black"
                                    android:text="Task Done"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:layout_gravity="center|start"
                                android:gravity="center"
                                android:fontFamily="@font/poppins_regular"
                                android:layout_marginTop="@dimen/spacing_medium"
                                android:textColor="@color/black"
                                android:padding="@dimen/spacing_middle"
                                android:text="0%"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="@dimen/spacing_middle"
                        android:elevation="@dimen/spacing_medium">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_middle">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/spacing_middle">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/black"
                                    android:text="No shortlisted vendors yet"/>

                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|start"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/grey_20"
                                    android:text="You haven't shortlisted any vendor yet"/>

                                <TextView
                                    android:id="@+id/vendor_shortlist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|start"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/pink"
                                    android:text="Get Started"
                                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24_pink"
                                    android:drawablePadding="@dimen/spacing_middle"
                                    />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/shortlist_img"
                                android:layout_gravity="center"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="@dimen/spacing_middle"
                        android:elevation="@dimen/spacing_medium">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_middle">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/checklist"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/spacing_middle">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/black"
                                    android:text="Shopping Shortlists"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16dp"
                                        android:layout_gravity="center|start"
                                        android:gravity="center"
                                        android:fontFamily="@font/poppins_regular"
                                        android:layout_marginTop="@dimen/spacing_medium"
                                        android:textColor="@color/black"
                                        android:text="0"/>

                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/pink"
                                    android:text="Shortlist"/>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="15dp"
                        android:layout_margin="@dimen/spacing_middle"
                        android:elevation="@dimen/spacing_medium">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/spacing_middle">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1"
                                android:layout_marginLeft="@dimen/spacing_middle">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/black"
                                    android:text="You don't have any favourites"/>

                                <TextView
                                    android:layout_width="250dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|start"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/grey_20"
                                    android:text="You haven't liked anything yet"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:layout_gravity="center|start"
                                    android:gravity="center|start"
                                    android:fontFamily="@font/poppins_regular"
                                    android:layout_marginTop="@dimen/spacing_medium"
                                    android:textColor="@color/pink"
                                    android:text="Add a Favourite"
                                    android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24_pink"
                                    android:drawablePadding="@dimen/spacing_middle"
                                    />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/favourite_img"
                                android:layout_gravity="center"
                                />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>