<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/spacing_mlarge"
        android:paddingBottom="@dimen/spacing_middle"
        android:paddingTop="@dimen/spacing_middle">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            app:cardBackgroundColor="@color/grey_10">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"
                android:scaleType="fitCenter"
                android:padding="@dimen/spacing_middle"
                />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_medium">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Neha Singh"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_20"
                android:textSize="14dp"
                android:fontFamily="@font/poppins_regular"
                android:text="View Profile"
                />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_10"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/spacing_large">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inbox_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inbox"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:id="@+id/write_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write a review"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:id="@+id/genei_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genie services"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="true"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:id="@+id/genie_recommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genie recommendations"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:id="@+id/join_a_wedding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Join a wedding"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:id="@+id/promotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Promotions"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact support"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:id="@+id/info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rate on play store"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_large">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share app"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="true"
                android:editable="false"
                android:cursorVisible="false"
                />

        </LinearLayout>

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>