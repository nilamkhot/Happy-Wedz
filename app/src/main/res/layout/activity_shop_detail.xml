<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/img_child_item"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:fitsSystemWindows="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/shop_img"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
                            android:layout_margin="5dp"
                            app:tint="@color/white"
                            android:padding="5dp"
                            />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="36dp"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INR"
                            android:textColor="@color/white"
                            android:fontFamily="@font/poppins_regular"
                            android:textSize="16dp"
                            android:layout_gravity="center"
                            android:drawablePadding="@dimen/spacing_middle"
                            android:layout_marginRight="@dimen/spacing_medium"
                            android:drawableTint="@color/white"
                            android:drawableRight="@drawable/ic_outline_arrow_drop_down_circle_24"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_share_24"
                            android:layout_margin="5dp"
                            app:tint="@color/white"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_outline_bookmark_border_24"
                            android:layout_margin="5dp"
                            app:tint="@color/white"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_medium"
                    android:layout_marginRight="@dimen/spacing_large"
                    android:layout_marginLeft="@dimen/spacing_large">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Maroon Lehenga"
                            android:textColor="@color/grey_10"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:padding="@dimen/spacing_medium"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_outline_bookmark_border_24"
                            app:tint="@color/black"
                            android:padding="@dimen/spacing_medium"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prevasu"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delhi NCR"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="98,000"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Details"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/spacing_middle"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fabric Details"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/spacing_middle"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How to order?"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/spacing_middle"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Use the WhtasApp to to buy button to get in touch
with the designer."
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/spacing_middle"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/spacing_middle">

                        <TextView
                            android:id="@+id/category_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/black"
                            android:text="More from Prevasu"
                            android:layout_weight="1"
                            />

                        <TextView
                            android:id="@+id/ongoing_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/poppins_light"
                            android:text="See More"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                            android:layout_marginRight="8dp"/>

                    </LinearLayout>

                    <!--Child RecyclerView-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/brand_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:text="Customer who viewed this product also viewed"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/spacing_medium"
                        />

                    <!--Child RecyclerView-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/viewed_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/black"
                        android:text="Browse by type"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/spacing_medium"
                        />

                    <!--Child RecyclerView-->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/type_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_large"/>

                </LinearLayout>


            </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle">

        <LinearLayout
            android:id="@+id/shortlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_circular_pink_outline1"
            android:gravity="center"
            android:alpha="0.9"
            android:layout_marginRight="@dimen/spacing_medium"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_outline_bookmark_border_24"
                android:alpha="1"
                android:layout_marginRight="@dimen/spacing_middle"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Shortlist"
                android:textSize="14sp"
                android:gravity="center"
                android:alpha="1"
                android:fontFamily="@font/poppins_regular"
                android:paddingRight="@dimen/spacing_middle"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/whatsaap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_circle_green"
            android:gravity="center"
            android:alpha="0.9"
            android:layout_marginLeft="@dimen/spacing_medium"
            android:paddingLeft="@dimen/spacing_middle"
            android:paddingRight="@dimen/spacing_middle"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_whatsapp_24"
                android:alpha="1"
                android:layout_marginRight="@dimen/spacing_medium"
                app:tint="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Chat with Designer"
                android:textSize="14sp"
                android:gravity="center"
                android:alpha="1"
                android:fontFamily="@font/poppins_regular"
                android:paddingTop="@dimen/spacing_medium"
                android:paddingBottom="@dimen/spacing_medium"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>