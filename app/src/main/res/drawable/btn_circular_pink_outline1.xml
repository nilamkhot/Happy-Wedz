<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_window_focused="true" android:state_focused="true">

        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/pink" />

                    <corners android:bottomLeftRadius="20.5dp" android:bottomRightRadius="20.5dp" android:radius="20.5dp" android:topLeftRadius="20.5dp" android:topRightRadius="20.5dp" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="150dp" android:height="50dp" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item>

        <layer-list>
            <item android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white" />
                    <stroke android:width="1dp" android:color="@color/pink" />

                    <corners android:bottomLeftRadius="20.5dp" android:bottomRightRadius="20.5dp" android:radius="20.5dp" android:topLeftRadius="20.5dp" android:topRightRadius="20.5dp" />
                    <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                    <size android:width="150dp" android:height="50dp" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>